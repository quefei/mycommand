#       5.主要函数
#
############################################################
# 获取倒数第几个选项
last_option()
{
        local OPTION=
        local NUM="0"
        
        for OPTION in "$@"; do
                if [[ "$OPTION" == "$1" ]]; then
                        continue 1
                fi
                
                if [[ "$(( NUM++ ))" == "$(( $#-$1 ))" ]]; then
                        echo "$OPTION"
                        break 1
                fi
        done
}

# 获取倒数第1个选项
last_option1()
{
        last_option "1" "$@"
}

# 获取倒数第2个选项
last_option2()
{
        last_option "2" "$@"
}

# 获取倒数第3个选项
last_option3()
{
        last_option "3" "$@"
}

# 获取倒数第4个选项
last_option4()
{
        last_option "4" "$@"
}

# 获取倒数第5个选项
last_option5()
{
        last_option "5" "$@"
}

# 获取倒数第6个选项
last_option6()
{
        last_option "6" "$@"
}

# 获取倒数第7个选项
last_option7()
{
        last_option "7" "$@"
}

# 获取倒数第8个选项
last_option8()
{
        last_option "8" "$@"
}

# 获取倒数第9个选项
last_option9()
{
        last_option "9" "$@"
}

# 获取倒数第10个选项
last_option10()
{
        last_option "10" "$@"
}


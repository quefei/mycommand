#!/bin/bash

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

############################################################
#
#       1.位置参量
#
############################################################

set -eu
#set -x

echo_color()
{
        echo -e "\e[1m\e[40;$2m$1\e[0m"
}

echo_error()
{
        echo_color "$1" "31"
        exit 1
}

echo_warning()
{
        echo_color "$1" "33"
        sleep 5
}

if [[ "$(id -u)" != "0" ]]; then
        echo_error "Error: must run with root"
fi

if [[ -s "/usr/local/bin/myfunction.sh" ]]; then
        . /usr/local/bin/myfunction.sh
else
        echo_error "Error: myfunction.sh not found"
fi

############################################################
#
#       2.全局变量
#
############################################################
IP_ADDR=$(ip_addr)
HOST_NAME="laravel"

############################################################
#
#       3.初始化
#
############################################################

############################################################
#
#       4.次要函数
#
############################################################

############################################################
#
#       5.主要函数
#
############################################################

############################################################
#
#       6.次要操作
#
############################################################

############################################################
#
#       7.主要操作
#
############################################################
cat > /etc/sysconfig/network <<-EOF
# Created by anaconda
NETWORKING=yes
HOSTNAME=${HOST_NAME}
EOF

if [[ -s "/etc/hosts" ]]; then
        sed -i "/^10\./d"  /etc/hosts
        sed -i "/^172\./d" /etc/hosts
        sed -i "/^192\./d" /etc/hosts
        
        echo "${IP_ADDR} ${HOST_NAME}" >> /etc/hosts
fi



















############################################################
#
#       8.结束语
#
############################################################
